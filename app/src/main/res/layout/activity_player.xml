<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.codetride.kezquizzy.player">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/Player"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="40sp"
                android:background="#0000"
                android:text="Players Quiz"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/ronaldo"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ronaldo"
                android:layout_below="@+id/Player"
                android:layout_alignLeft="@+id/rooney"
                android:layout_alignStart="@+id/rooney"
                android:layout_marginTop="32dp" />

            <ImageView
                android:id="@+id/messi"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/messi"
                android:layout_alignTop="@+id/ronaldo"
                android:layout_alignLeft="@+id/zlatan"
                android:layout_alignStart="@+id/zlatan" />

            <ImageView
                android:id="@+id/zlatan"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/zlatan"
                android:layout_marginRight="21dp"
                android:layout_marginEnd="21dp"
                android:layout_alignTop="@+id/rooney"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/rooney"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/rooney"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/ronaldo"
                android:layout_toLeftOf="@+id/zlatan"
                android:layout_toStartOf="@+id/zlatan" />

            <Button
                android:id="@+id/Exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="#0000"
                android:layout_below="@+id/zlatan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
