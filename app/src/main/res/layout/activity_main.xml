<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/makhataryan"
    tools:context="com.example.codetride.kezquizzy.MainActivity">


    <TextView
        android:id="@+id/KezQuizzy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="KezQuizzy"
        android:textColor="#990000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Player"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Exit"
        android:layout_marginBottom="156dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/Exit"
        android:layout_toStartOf="@+id/Exit"
        android:background="#9900"
        android:text="Player Quiz"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="27dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Team"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Player"
        android:layout_alignBottom="@+id/Player"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/Exit"
        android:layout_toRightOf="@+id/Exit"
        android:background="#9900"
        android:text="Team Quiz"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="27dp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0000"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />
</RelativeLayout>
